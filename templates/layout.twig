<!DOCTYPE html>
<html lang="en">
    <head prefix="og: http://ogp.me/ns#">
        <title>{% spaceless %}{% block title %}Tito Miguel Costa{% endblock %}{% endspaceless %}</title>
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('/favicon.ico') }}">
        <!-- meta tags -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="utf-8">
        <meta name="description" content="{% spaceless %}{% block description %}Tito Miguel Costa, Refactoring ideas, website of a symfony web developer{% endblock %}{% endspaceless %}">
        <meta name="keywords" content="tito,programming,php,symfony,developer">
        <meta name="author" content="Tito Miguel Costa <website@titomiguelcosta.com>">
        <!--<meta name="viewport" content="width=device-width, initial-scale=1.0">-->

        <!-- open graph tags -->
        <meta property="og:title" content="{% spaceless %}{{ block('title') }}{% endspaceless %}">
        <meta property="og:url" content="https://www.titomiguelcosta.com">
        <meta property="og:type" content="website">
        <meta property="og:image" content="https://www.titomiguelcosta.com/images/logo.png">
        <meta property="og:image:type" content="image/png">
        <meta property="og:image:width" content="256">
        <meta property="og:image:height" content="256">
        <meta property="og:description" content="{% spaceless %}{{ block('description') }}{% endspaceless %}">

        <link href="{{ url('blog_feed') }}" type="application/atom+xml" rel="alternate" title="Tito Miguel Costa Blog Feed">

        <!-- javascript -->
        {% block javascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js" type="text/javascript"></script>
        <script src="{{ asset('/js/main.js') }}" type="text/javascript"></script>
        {% endblock %}

        <!-- stylesheets -->
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Enriqueta:400,700">
        <link rel="stylesheet" type="text/css" href="{{ asset('/css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('/css/bootstrap-responsive.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('/css/style.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('/css/purple.css') }}">
        {% endblock %}
    </head>
    <body>
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-6024619-5']);
            _gaq.push(['_trackPageview']);
            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
        {% block banner %}
        <div id="line" class="row-fluid">
            <div class="square first"></div>
            <div class="square second"></div>
            <div class="square third"></div>
            <div class="square fourth"></div>
            <div class="square fifth"></div>
        </div>
        <div id="banner">
        </div>
        {% endblock %}
        <div id="wrapper">
            <div class="container">
                <header class="row-fluid">
                    <div class="span6">
                        <a href="{{ path('homepage') }}"><img src="{{ asset('/images/logo.png') }}" align="left" alt="Tito Miguel Costa" width="66" height="75"></a>
                        <div id="name"><a href="{{ path('homepage') }}"><span class="tags">&lt;</span>titomiguelcosta <span class="tags">/&gt;</span></a></div>
                        <div id="slogan">{% block slogan %}Refactoring ideas{% endblock %}</div>
                    </div>
                    {% block menu %}
                        <div id="menu" class="pull-right span6">
                            <ul class="unstyled">
                                <li class="first{% if path('contact') == global.request.getPathInfo() %} active{% endif %}"><a href="{{ path('contact') }}">Contact</a></li>
                                <li class="third{% if path('code') == global.request.getPathInfo() %} active{% endif %}"><a href="{{ path('code') }}">Code</a></li>
                                <li class="second{% if path('projects') == global.request.getPathInfo() %} active{% endif %}"><a href="{{ path('projects') }}">Projects</a></li>
                                <li class="first{% if path('profile') == global.request.getPathInfo() %} active{% endif %}"><a href="{{ path('profile') }}">Profile</a></li>
                            </ul>
                        </div>
                    {% endblock %}
                </header>
                {% block body %}{% endblock %}
            </div>
        </div>
        {% block footer %}
        <div id="footer">
            <footer class="container">
                {% spaceless %}
                    <a href="/"><img src="{{ asset('/images/footer/home.svg') }}" width="20" height="20" alt="Home"></a>
                    <a href="https://www.youtube.com/playlist?list=PLJo6vGeINQikqwwTnLHEF5hi0W3jafvPP" target="_blank"><img src="{{ asset('/images/footer/video.svg') }}" width="20" height="20" alt="Short films"></a>
                    <a href="https://www.instagram.com/titomiguelcosta/" target="_blank"><img src="{{ asset('/images/footer/camera.svg') }}" width="20" height="20" alt="Photos"></a>
                    <a href="https://www.youtube.com/playlist?list=PL3E4772C48425800C" target="_blank"><img src="{{ asset('/images/footer/headphones.svg') }}" width="20"height="20"  alt="Music"></a>
                {% endspaceless %}
                <div id="credits" class="pull-right">&copy; Tito Miguel Costa</div>
            </footer>
        </div>
        {% endblock %}
    </body>
</html>